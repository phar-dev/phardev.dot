{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-anthropic-auth"],
  "model": "github-copilot/grok-code-fast-1",
  "theme": "cursor",
  "autoupdate": true,
  "default_agent": "phardev",
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**"]
  },
  "permission": {
    "bash": {
      "*": "allow",
      "git commit *": "allow",
      "git push *": "ask",
      "git push": "ask",
      "git push --force *": "ask",
      "git rebase *": "ask",
      "git reset --hard *": "ask"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "**/.env": "deny",
      "**/.env.*": "deny",
      "**/secrets/**": "deny",
      "**/credentials.json": "deny"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    },
    "github": {
      "type": "remote",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_MCP_PATH}"
      },
      "enabled": false,
      "url": "https://api.githubcopilot.com/mcp/"
    }
  }
}
